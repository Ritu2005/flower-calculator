  <script>
    /* calculator logic (same as before) */
    function append(v){
      const d = document.getElementById('display');
      d.value += v;
    }
    function clearDisplay(){
      document.getElementById('display').value = '';
    }
    function calculate(){
      try{
        const d = document.getElementById('display');
        // simple safety: disallow letters
        if (/[^0-9+\-*/(). ]/.test(d.value)) { d.value = 'Error'; return; }
        d.value = eval(d.value);
      }catch(e){
        document.getElementById('display').value = 'Error';
      }
    }

    /* create floating petals (emoji) without external images */
    const petals = ['ðŸŒ¸','ðŸŒ·','ðŸŒ¼','ðŸ’®','ðŸŒº'];
    function createPetal(){
      const p = document.createElement('div');
      p.className = 'petal';
      p.textContent = petals[Math.floor(Math.random()*petals.length)];
      // random horizontal start
      p.style.left = (Math.random()*100) + 'vw';
      // random size
      const s = 12 + Math.random()*18;
      p.style.fontSize = s + 'px';
      // random animation duration
      p.style.animationDuration = (4 + Math.random()*6) + 's';
      document.body.appendChild(p);
      // remove after animation
      setTimeout(()=> p.remove(), 11000);
    }
    // create a petal every 500ms
    setInterval(createPetal, 600);
    // create a few immediately so page isn't empty
    for(let i=0;i<6;i++) setTimeout(createPetal, i*200);
  </script>
